<UserControl x:Class="VisualProfilerUI.View.ContainingUnitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:View="clr-namespace:VisualProfilerUI.View" >
    <ItemsControl ItemsSource="{Binding }">
    <!--<ItemsControl ItemsSource="{Binding Path=ContainedMethods}">-->
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Width="20" Height="150"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Canvas.Left" Value="5"/>
                <Setter Property="Canvas.Top" Value="{Binding Path=Top}"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <!--<Rectangle Width="10" Height="{Binding Path=Height}" Fill="Coral" />-->
                <View:MethodView 
                                MouseEnteredCommand="{Binding Path=ActivateCommand}" 
                                Fill="{Binding Path=Fill}" 
                                Height="{Binding Path=Height}"
                                />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
